<%- include("../partials/header") %>
<div class="container add-dest">
    <form class="dest-form" action="/destinations/<%= destination._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="destination">Destination Name</label>
            <input class="form-control" id="destination" type="text" name="place[destination]" value="<%= destination.destination %>">
        </div>

        <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" id="image" type="text" name="place[image]" value="<%= destination.image %>">
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" name="place[description]"><%= destination.description %></textarea>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-lg btn-success" value="Update">
        </div>
    </form>
</div>


<%- include("../partials/footer") %>